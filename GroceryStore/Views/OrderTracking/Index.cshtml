<script type="text/javascript">
    $(document).ready(function () {
        $('.tra').hide();
        $(document).on("click", "#shopGetOrderStatusID", function () {
            var trackingNo = $("#inputOrderTrackingID").val();
            if (trackingNo != "") {
                GS.OrderTracking.getTrackingRecord(trackingNo);
                $("#inputOrderTrackingID").val("");
                $('.tra').show();
            }
            else {
                alert("Please enter order tracking number")
            }
        });

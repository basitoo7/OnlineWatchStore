@model GroceryStore.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/js/bootstrap.min.js"></script>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <title>Delete</title>
</head>
<body background="/uploads/ProductsBackground.jpg" style="background-size:cover; width:auto; height:auto;">
    <div style="width:100%; margin-top:4%">
        <div class="container" style="width:29%;  margin:0 auto; padding:2% 0 2% 5%; background-color:rgba(0,0,0,0.25); border-radius:5px;">
            <h3>Are you sure you want to delete this Product?</h3><br />

            <div>

                <style>
                    .TBL tr td {
                        padding: 5px;
                    }
                </style>



                <table class="TBL">
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.image_path)</b></td>
                        <td>@Html.DisplayFor(model => model.image_path)</td>
                    </tr>
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.product_name)</b></td>
                        <td>@Html.DisplayFor(model => model.product_name)</td>
                    </tr>
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.Product_price)</b></td>
                        <td>@Html.DisplayFor(model => model.Product_price)</td>
                    </tr>
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.product_details)</b></td>
                        <td>@Html.DisplayFor(model => model.product_details)</td>
                    </tr>
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.Catagory.name)</b></td>
                        <td>@Html.DisplayFor(model => model.Catagory.name)</td>
                    </tr>
                </table>

            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                    <div class="btn btn-default">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
